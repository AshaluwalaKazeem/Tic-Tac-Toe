<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_activity_bg"
    android:paddingTop="70dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:orientation="vertical"
    tools:context=".Player2InfoActivity">

    <TextView
        android:id="@+id/tic_tac_toe_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Tic Tac Toe"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:elevation="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/purple_500"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/player2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 2"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/player2_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:placeholderText="Username"
            app:errorEnabled="true"
            app:helperTextEnabled="true"
            app:helperText="Enter your Usernamme"
            app:boxBackgroundColor="@color/purple_500"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/white"
            app:boxStrokeErrorColor="@color/red"
            app:boxStrokeWidth="1.5dp"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            app:hintAnimationEnabled="true"
            app:helperTextTextColor="@color/white"
            app:hintTextColor="@color/white"
            android:textColorHint="@color/white"
            app:placeholderTextColor="@color/white"
            app:counterTextColor="@color/white"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/player2_edit_text"
                android:layout_width="match_parent"
                android:maxLength="15"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player2 Maker Type"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/player_2_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_o_player"/>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/enter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_200"
        android:text="Enter"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/purple_500"
        android:padding="10dp"
        android:text="Back"/>


</LinearLayout>